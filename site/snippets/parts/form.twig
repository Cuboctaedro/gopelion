{% import '@snippets/atoms/forms.twig' as forms %}
{% import '@snippets/atoms/headings.twig' as headings %}
{% import "@snippets/atoms/ruler.twig" as ruler %}
{% set contact = pages.findBy('template', 'contact') %}
<section>
    {{ headings.sub(contact.formtitle, '2', ' font-regular text-center ') }}
    <p class="w-full text-center mt-16">{{ contact.formsubtitle }}</p>
    {{ ruler.center() }}

    <form action="{{ pages.findBy('template', 'contact').url }}" method="POST">

        <div class="w-full mb-50">
            {{ forms.input(availability_form, 'firstname', 'First Name') }}
        </div>
        <div class="w-full mb-50">
            {{ forms.input(availability_form, 'lastname', 'Last Name') }}
        </div>
        <div class="w-full mb-50">
            {{ forms.input(availability_form, 'email', 'Email', 'email') }}
        </div>
        <div class="w-full mb-50 flex flex-row flex-wrap">
            <div class="w-full sm:w-1/3 sm:pr-16">
                {{ forms.input(availability_form, 'arrival', 'Arrival', 'text', ' flatpickr ', 'readonly="readonly" ') }}
            </div>
            <div class="w-full sm:w-2/3 sm:pl-16">
                {{ forms.input(availability_form, 'departure', 'Departure', 'text', ' flatpickr ', 'readonly="readonly" ') }}
            </div>
        </div>
        <div class="w-full mb-50 flex flex-row flex-wrap">
            <div class="w-full sm:w-1/3 sm:pr-16">
                {{ forms.input(availability_form, 'rooms', 'Rooms', 'number') }}
            </div>
            <div class="w-full sm:w-2/3 sm:pl-16">
                {{ forms.input(availability_form, 'people', 'People', 'number') }}
            </div>
        </div>
        {{ csrf_field() }}
        {{ honeypot_field() }}

        <div class="w-full mb-50 flex flex-row justify-center">
            <input type="submit" value="Submit" class="button cursor-pointer">
        </div>

    </form>
{% if availability_form.success %}
    Thank you for your message. We will get back to you soon!
{%  endif %}
</section>
