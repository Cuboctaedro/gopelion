<!doctype html>
<html lang="{{ t('isocode') }}">
<head>
    <meta charset="utf-8" />
    <meta name="description" content="{{ page.description }}" />

    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="canonical" href="{{ page.url }}"/>
    {% for lang in kirby.languages %}
        <link rel="alternate" hreflang="{{ lang.translations.isocode }}" href="{{ page.url(lang.code) }}" />
    {% endfor %}
    {{ mix('/app.css')|raw }}
    </head>

    {% import '@snippets/atoms/icons.twig'  as icons %}

    <body class="leading-normal font-sans text-grey-main bodywrap relative">
        <a class="skip-link" href="#main">Skip to content</a>
        <header class="header flex flex-row flex-wrap effect" id="siteheader">
            <div class="subtitle uppercase tracking-wide py-16 px-24">
                <a href="{{ site.url }}" >
                    {% if kirby.language.code == 'en' %}
                    <strong>Ghermaniko</strong> & <strong>Victoria</strong> Guesthouses <span class="hidden md:inline">In Damouchari <span class="hidden lg:inline">, Pelion</span></span>
                    {% else %}
                    Ξενώνες <strong>Γερμανικό</strong> και <strong>Βικτώρια</strong> <span class="hidden md:inline">στη Νταμούχαρη <span class="hidden lg:inline">Πηλίου</span></span>
                    {% endif %}
                </a>
            </div>
            <div class="phone-langs flex flex-row">
                <div class="phone flex flex-row px-8 py-16 relative">
                    <button class="show-phone px-8 flex flex-row link" >
                        {{ icons.tel() }}
                    </button>
                    <div class="absolute w-240 md:w-auto p-16 md:p-0 bg-white shadow-2 md:shadow-none hidden md:flex md:static flex-col md:flex-row md:h-24" id="phones" style="top:48px; left:24px;">
                        <span class="md:border-r border-solid border-grey px-8">{{ site.fixed }}</span>
                        <span class="px-8">{{ site.mobile }}</span>
                    </div>
                </div>
                <nav>
                    <ul class="flex flex-row list-reset p-16">
                        <li class="border-r border-solid border-grey">
                            <a href="{{ page.url('en') }}" class="block px-16 uppercase type-14 tracking-wide {{ kirby.language.code == 'en' ? ' font-regular ' : ' font-bold ' }}">eng</a>
                        </li>
                        <li>
                            <a href="{{ page.url('gr') }}" class="block px-16 uppercase type-14 tracking-wide {{ kirby.language.code == 'gr' ? ' font-regular ' : ' font-bold ' }}">ελλ</a>
                        </li>
                    </ul>
                </nav>
            </div>

            {% include '@snippets/sitemenu.twig' %}
            {% include '@snippets/parts/logolinks.twig' %}
        </header>

        <main id="main" role="main" class="py-32 relative z-0">
            <div id="hoverbackground"></div>
            {% block main %}
            {% endblock %}

    <section>
        <!-- form -->
    </section>

    </main>

    <footer id="footer" class="py-32 container px-8 sm:px-16 md:px-64 mx-auto ">
        <hr class="mb-64 block h-0 border-b border-black border-solid w-72 mx-auto" />
        <div class="flex flex-row flex-wrap">
            <div class="w-full md:w-1/3 px-16">
                <div class="uppercase tracking-wide mb-24 ">
                    {{ site.footertitle.kt|raw }}
                </div>
                <div>
                    {{ site.footerlocation.kt|raw }}
                </div>
            </div>
            <div class="w-full md:w-1/3 px-16">
                <div class="pb-16 flex flex-row text-grey-dark">
                    {{ icons.tel() }}
                    <span class="pl-16">{{ site.fixed }}</span>
                </div>
                <div class="pb-16 flex flex-row text-grey-dark">
                    {{ icons.tel() }}
                    <span class="pl-16">{{ site.mobile }}</span>
                </div>
                {% for mail in site.maillist.toStructure %}
                    <div class="pb-16 flex flex-row text-grey-dark">
                        {{ icons.email() }}
                        <span class="pl-16">{{ mail.email }}</span>
                    </div>
                {% endfor %}
            </div>
            <div class="w-full md:w-1/3 px-16">
                <div class="uppercase tracking-wide mb-24 ">
                    {{ t('followus') }}
                </div>
                {% if site.facebook.isNotEmpty %}
                    <a class="pb-16 flex flex-row text-grey-dark block no-underline" href="{{ site.facebook }}">
                        {{ icons.facebook() }}
                        <span class="pl-16">Facebook</span>
                    </a>
                {% endif %}
                {% if site.twitter.isNotEmpty %}
                    <a class="pb-16 flex flex-row text-grey-dark block no-underline" href="{{ site.twitter }}">
                        {{ icons.twitter() }}
                        <span class="pl-16">Twitter</span>
                    </a>
                {% endif %}
                {% if site.instagram.isNotEmpty %}
                    <a class="pb-16 flex flex-row text-grey-dark block no-underline" href="{{ site.instagram }}">
                        {{ icons.instagram() }}
                        <span class="pl-16">Instagram</span>
                    </a>
                {% endif %}
            </div>
        </div>
    </footer>
{{ mix('/app.js')|raw }}
</body>
</html>
